{
  "preset": "ts-jest",
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec\\.ts$",
  "moduleFileExtensions": ["ts", "js", "json"],
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "tsconfig.json",
        "diagnostics": true
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "globals": {
    "ts-jest": {
      "useESM": true,
      "tsconfig": "tsconfig.json",
      "diagnostics": true
    }
  }
  
}
