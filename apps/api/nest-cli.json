{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.build.json",
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.yaml",
        "outDir": "dist"
      }
    ]
  },
  "generateOptions": {
    "spec": false
  }
}